{
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.biome": "explicit",
    "source.organizeImports.biome": "explicit"
  },
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[handlebars]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[markdown]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[tsx]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "biome.enabled": true,
  "workbench.editor.customLabels.patterns": {
    "**/app/**/layout.tsx": "${dirname}/${filename}.${extname}",
    "**/app/**/page.tsx": "${dirname}/${filename}.${extname}",
    "**/app/**/loading.tsx": "${dirname}/${filename}.${extname}",
    "**/app/**/not-found.tsx": "${dirname}/${filename}.${extname}",
    "**/app/**/error.tsx": "${dirname}/${filename}.${extname}",
    "**/app/**/route.ts": "${dirname}/${filename}.${extname}",
    "**/app/**/template.tsx": "${dirname}/${filename}.${extname}"
  },
  "files.exclude": {
    ".next": true,
    "**/.turbo": true,
    ".gitattributes": true,
    "apps/nextjs/.next": true,
    "**/task-word/*": true,
    ".chrome-data/**": true,
    "**/.docker/**": true
  },
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/.pnpm/**": true,
    "**/dist/**": true,
    ".chrome-data/**": true,
    "**/.docker/**": true
  },
  "files.associations": {
    "turbo.json": "jsonc",
    "knip.json": "jsonc"
  },
  "typescript.preferences.autoImportFileExcludePatterns": [
    "@radix-ui",
    "radix-ui",
    "drizzle-orm/mysql-core",
    "drizzle-orm/sqlite-core",
    "drizzle-orm/gel-core",
    "drizzle-orm/singlestore-core"
  ],
  "typescript.tsdk": "node_modules/typescript/lib",
  "VSCodeCounter.languages": {
    "typescript": {
      "extensions": ["ts", "tsx"]
    }
  },
  "VSCodeCounter.exclude": [
    "**/.docker/**",
    "**/.gitignore",
    "**/.vscode/**",
    "**/node_modules/**"
  ]
}
